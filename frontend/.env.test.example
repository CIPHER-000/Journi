# Test Environment Configuration
# Copy this to .env.test.local and fill in your values

# Test Environment Type
# Options: mock, staging, integration
TEST_ENV=mock
VITE_TEST_ENV=mock

# Enable Test Reporter
VITE_ENABLE_TEST_REPORTER=true

# =====================================
# STAGING ENVIRONMENT
# =====================================

# Staging API URL (use production backend for testing)
VITE_STAGING_API_URL=https://journi-backend.onrender.com

# Staging Test User Credentials
VITE_TEST_USER_EMAIL=test@journi-staging.com
VITE_TEST_USER_PASSWORD=

# Staging Test Token (for authenticated requests)
VITE_STAGING_TEST_TOKEN=

# =====================================
# INTEGRATION ENVIRONMENT  
# =====================================

# Integration API URL (local docker-compose)
VITE_INTEGRATION_API_URL=http://localhost:8000

# Integration Test Token
VITE_INTEGRATION_TEST_TOKEN=

# =====================================
# FEATURE FLAGS
# =====================================

# Enable real file upload tests
VITE_TEST_REAL_FILE_UPLOAD=false

# Enable WebSocket tests
VITE_TEST_WEBSOCKET=false

# Skip slow tests (for quick feedback)
VITE_SKIP_SLOW_TESTS=false

# =====================================
# TEST CONFIGURATION
# =====================================

# Test timeout multiplier (for slow environments)
VITE_TEST_TIMEOUT_MULTIPLIER=1

# Enable verbose logging in tests
VITE_TEST_VERBOSE=false
